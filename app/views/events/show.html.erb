<h2>Event Info</h2>

<h3> <%= @event.title %> </h3>

<% if flash[:success] %>
  <p style="color: green"> <%= flash[:success] %> </p>
<% end %>

<p> Date: <%= @event.date %></p>
<p> Host: <%= link_to @event.user.username, user_path(@event.user) %></p>
<br>
<p> Longitude: <%= @event.longitude %></p>
<p> Latitude: <%= @event.latitude %></p>

<%= button_to "Edit", edit_event_path, method: :get %>
