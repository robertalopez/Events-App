<% if flash[:errors] %>
    <ul>
        <% flash[:errors].each do |error| %>
            <li style="color: red"> <%= error %> </li>
        <% end %>
    </ul>
<% end %>

<%= form_for @user do |f|%>
    <%= f.label :username%><br>
    <%= f.text_field :username%><br>
    <%= f.label :password%><br>
    <%= f.password_field :password%><br>
    <%= f.label :bio%><br>
    <%= f.text_field :bio %><br>
    <%= f.label :profile_picture %><br>
    <%= f.text_field :profile_picture%><br>
    <%= f.submit %>
  <%end%>